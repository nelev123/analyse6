               \tkzTabInit[color,colorT=oplossing,colorC=oplossing,colorL=oplossing,colorV=oplossing,espcl=3.50,lgt=2]{$x$/1.,$f'(x)$/.7,$f(x)$/1.5}{$-\infty$,$6$,$+\infty$} 
              \tkzTabLine{,-,0,+,}
